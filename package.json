{
  "name": "lts-service",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "tsc",
    "build:bridge": "node scripts/build-bridge.js",
    "start": "node dist/index.js",
    "dev": "concurrently -n backend,web \"tsx watch src/index.ts\" \"npm run dev:web\"",
    "dev:web": "cd web && npm run dev",
    "dev:backend": "tsx watch src/index.ts"
  },
  "dependencies": {
    "dotenv": "^16.4.5",
    "@fastify/cors": "^10.0.1",
    "@fastify/jwt": "^9.0.1",
    "fastify": "^5.1.0",
    "firebase-admin": "^13.0.2",
    "ioredis": "^5.4.1",
    "pino": "^9.5.0",
    "pino-pretty": "^13.0.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^22.10.1",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "concurrently": "^9.1.2"
  }
}